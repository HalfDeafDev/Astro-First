---
import Header from 'tutorial/components/Header.astro';
import Footer from 'tutorial/components/Footer.astro';
import 'tutorial/styles/global.css';

const { pageTitle, shouldRedirect, redirectUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		{
			shouldRedirect ? (
				<meta http-equiv="refresh" content={`10; url=${redirectUrl}`} />
			) : ``
		}
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<script>
			import "tutorial/scripts/menu.js";
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
